# Django 設定
DJANGO_SECRET_KEY=your-secret-key-here-change-this-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# 資料庫設定（開發環境使用 SQLite，生產環境建議使用 PostgreSQL）
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=your_database_name
# DATABASE_USER=your_database_user
# DATABASE_PASSWORD=your_database_password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# OpenAI API 設定
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500

# Sentence Transformers 設定（語義相似度）
SENTENCE_TRANSFORMER_MODEL=paraphrase-MiniLM-L6-v2

# Ollama Cloud API 設定（替代 OpenAI）
# 支援的雲端模型：deepseek-v3.1:671b-cloud, gpt-oss:20b-cloud, 
# gpt-oss:120b-cloud, kimi-k2:1t-cloud, qwen3-coder:480b-cloud,
# glm-4.6:cloud, minimax-m2:cloud
OLLAMA_API_KEY=your-ollama-api-key-here
OLLAMA_HOST=https://ollama.com
OLLAMA_MODEL=gpt-oss:120b

# FAISS 索引設定
FAISS_INDEX_PATH=/path/to/faiss/index
FAISS_DIMENSION=384

# 檔案上傳設定
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=uploads/

# 雲端同步設定
SYNC_PATH=/path/to/sync/folder

# Redis 設定（用於快取和 Celery，選用）
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# Celery 設定（非同步任務，選用）
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS 設定（如果需要跨域請求）
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email 設定（用於通知，選用）
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-email-password

# Sentry 錯誤追蹤（生產環境建議）
# SENTRY_DSN=your-sentry-dsn-here

# 日誌等級
LOG_LEVEL=INFO
